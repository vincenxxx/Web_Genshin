<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Genshin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Genshin.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Scada:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
   
</head>
<body>
    <div class="sidebar">
        <a class="nav-main-tittle" asp-area="" asp-controller="Home" asp-action="Index">CharacterGenshinBoost</a>
        <a class="nav-tittle" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
        <a class="nav-tittle" asp-area="" asp-controller="Home" asp-action="Privacy">Каталог</a>
        <a class="nav-tittle" asp-area="" asp-controller="Home" asp-action="Auth">Личный кабинет</a>
    </div>

    <div class="content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
<script>
       document.addEventListener('DOMContentLoaded', function() {
        const token = localStorage.getItem('access_token');
        const clientLink = document.querySelector('a[href="/Home/Auth"]');

        if (token) {
            console.log('Токен найден, показываем информацию для авторизованного пользователя');
            if (clientLink) {
                clientLink.setAttribute('asp-action', 'Client');
                clientLink.setAttribute('href', '/Home/Client');
            }
        } else {
            console.log('Токен не найден, показываем информацию для гостя');
            if (clientLink) {
                clientLink.setAttribute('asp-action', 'Auth');
                clientLink.setAttribute('href', '/Home/Auth');
            }
        }
    });
</script>