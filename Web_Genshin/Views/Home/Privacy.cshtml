@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="_container _container--indent l_k">
    <div class="paper catalog-body">
        <div class="le_f1">
            <div class="le_b2">Каталог</div>
            <div class="form-input le_b3">
                <input class="form-input__field" id="search-input" type="text" placeholder="Поиск по названию" wfd-id="id0">
            </div>
        </div>
        <div id="cards-container" class="cards-container">
            <!-- Карточки будут добавляться сюда -->
        </div>
    </div>

    <div id="character-modal" class="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="modal-title" class="modal-title"></h5>
                    <button type="button" id="close-modal-header" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="modal-body" class="modal-body">
                    <div class="modal-content-wrapper">
                        <div class="image-frame">
                            <img src="" id="modal-image" width="400" alt="" />
                        </div>
                        <div class="text-content">
                            <p class="modal-text" id="character-title"></p>
                            <p class="modal-text"><strong>Element:</strong> <span id="character-element"></span></p>
                            <p class="modal-text"><strong>Rarity:</strong> <span id="character-rarity"></span></p>
                            <p class="modal-text"><strong>Weapon:</strong> <span id="character-weapon"></span></p>
                            <p class="modal-text"><strong>Nation:</strong> <span id="character-nation"></span></p>
                        </div>
                    </div>
                    <hr />
                    <div id="talents-section">
                        <h5 class="name-tittle">Talents</h5>
                        <div id="talents"></div>
                    </div>
                    <hr />
                    <div id="passive-talents-section">
                        <h5 class="name-tittle">Passive Talents</h5>
                        <div id="passive-talents"></div>
                    </div>
                    <hr />
                    <div id="ascension-materials-section">
                        <h5 class="name-tittle">Ascension Materials</h5>
                        <div id="ascension-materials"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="close-modal-footer" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>

    <div class="catalog-filter paper">
        <div class="filter-category">
            <div class="filter-category-title">Оружие:</div>
            <div class="filter-options">
                <div class="filter-column">
                    <label>
                        <input type="checkbox" name="weapon" value="Bow"> Лук
                    </label>
                    <label>
                        <input type="checkbox" name="weapon" value="Sword"> Одноручный меч
                    </label>
                    <label>
                        <input type="checkbox" name="weapon" value="Catalyst"> Катализатор
                    </label>
                </div>
                <div class="filter-column">
                    <label>
                        <input type="checkbox" name="weapon" value="Polearm"> Копье
                    </label>
                    <label>
                        <input type="checkbox" name="weapon" value="Claymore"> Двуручный меч
                    </label>
                </div>
            </div>
        </div>

        <div class="filter-category">
            <div class="filter-category-title">Редкость:</div>
            <div class="filter-options">
                <div class="filter-column">
                    <label>
                        <input type="checkbox" name="rarity" value=5> Легендарный
                    </label>
                    <label>
                        <input type="checkbox" name="rarity" value=4> Эпический
                    </label>
                </div>
            </div>
        </div>

        <div class="filter-category">
            <div class="filter-category-title">Элемент:</div>
            <div class="filter-options">
                <div class="filter-column">
                    <label>
                        <input type="checkbox" name="element" value="Cryo"> Крио
                    </label>
                    <label>
                        <input type="checkbox" name="element" value="Pyro"> Пиро
                    </label>
                    <label>
                        <input type="checkbox" name="element" value="Electro"> Электро
                    </label>
                    <label>
                        <input type="checkbox" name="element" value="Hydro"> Гидро
                    </label>

                </div>
                <div class="filter-column">
                    <label>
                        <input type="checkbox" name="element" value="Dendro"> Дендро
                    </label>
                    <label>
                        <input type="checkbox" name="element" value="Geo"> Гео
                    </label>
                    <label>
                        <input type="checkbox" name="element" value="Anemo"> Анемо
                    </label>
                </div>
            </div>
        </div>
        <div class="filter-actions">
            <button class="btn btn-primary" id="apply-filter">Применить</button>
            <button class="btn btn-secondary" id="reset-filter">Сбросить</button>
        </div>
    </div>


</div>

